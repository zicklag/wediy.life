---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'Home',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero
    tagline="We Did it Ourselves"
    title="A Chronicle of Fixing Things"
    subtitle="We're just some folks figuring out how to fix the things break around us. Air conditioners and cars to the whole house's foundation!"
    actions={[
      {
        variant: 'primary',
        text: 'See Our Projects',
        href: getPermalink('/projects'),
        icon: 'tabler:square-rounded-arrow-right',
      },
      { text: 'Support Us', href: getPermalink('/support') },
    ]}
    image={{
      src: '~/assets/images/default.png',
      alt: 'WeDIY Life Around Here',
    }}
  />

  <CallToAction
    title="Always something going on"
    subtitle="Even this website is continually under construction! Projects added as time permits!"
    actions={[
      {
        variant: 'primary',
        text: 'Projects Documented So Far',
        href: getPermalink('/projects'),
        icon: 'tabler:square-rounded-arrow-right',
      },
    ]}
  />
</Layout>
